link(href='/stylesheets/stylebootstrap.min.css', rel='stylesheet', media='screen')

div.body
	div(style={"margin-left":"auto", "margin-right":"auto", "display":"block", "width":"320px"})

		.container
			h1(style={"margin-bottom":"0px"}) TestGrafi
			p(style={"padding-left":"45px"}) powered by
				img(src='/images/Codascent_2C_RGB_HR.png', style={"height":"30px", "padding-left":"5px"})
			form.form-horizontal(style={"width":"320px"})
				.form-group
					label.control-label.col-sm-3 Username
					.col-sm-9
						input.form-control(type='text', ng-model='vm.user.username')
				.form-group
					label.control-label.col-sm-3 Password
					.col-sm-9
						input.form-control(type='password', ng-model='vm.user.password')
				.form-group
					.col-sm-offset-3.col-sm-9
						.checkbox
							label
								input.checkbox(type='checkbox', value='false', ng-model='vm.user.rememberme')
								| Remember me

				.form-group
					.col-sm-offset-3.col-sm-9
						button.btn.btn-primary(ng-click='vm.login(vm.user)', type='submit', style={"margin-right":"7px"}) Sign In
						a(ui-sref="forgotPassword()") Forgot your Password?

		button.btn.btn-link.pull-right(ui-sref="signup()", title="create an account") Sign Up
